{
  "manifest_version": 3,
  "name": "IB Portfolio Analyzer",
  "version": "1.0.0",
  "description": "Interactive Brokers 账户仓位分析 - 希腊值、蒙特卡洛模拟、风险评估",
  "permissions": [
    "nativeMessaging",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/background.js"
  }
}
